  <div class="bg-grey-lighter flex flex-col p-[10%]">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
      <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
        <h1 class="font-bold mb-8 text-3xl text-red-600 text-center">Create Account</h1>
        <form class='form login-form' id='signUpForm'>

          <div class='form-group'>
            <input id='first-name' type="text" class="block border border-grey-light w-full p-3 rounded mb-4" name="firstname" placeholder="First Name"/>
          </div>

          <div class='form-group'>
            <input type="text" id='last-name' class="block border border-grey-light w-full p-3 rounded mb-4" name="lastname" placeholder="Last Name" />
          </div>

          <div class='form-group'>
            <input type="text" id='email' class="block border border-grey-light w-full p-3 rounded mb-4" name="email" placeholder="Email address" />
          </div>

          <div class='form-group'>
            <input type="password" id='password-login' class="block border border-grey-light w-full p-3 rounded mb-4" name="password" placeholder="Password" />
          </div>

          <div class='form-group'>
            <input type="password" id='password-confirm' class="block border border-grey-light w-full p-3 rounded mb-4" name="confirm_password" placeholder="Confirm Password" />
          </div>
          <!-- not sure how password confirm will work. -->
          <div class='form-group'>
            <button class='font-medium btn btn-primary bg-red-600 text-white rounded-md p-1 w-full text-center' type='submit' id='signup-button'>Create Account</button>
          </div>

          <div class="text-grey-dark mt-6 text-center">
            <p>Already have an account? 
              <a id='login-from-signup' href='/login'><span class="text-red-600">Log in</span></a>
            </p>
          </div>
        </form>
      </div>

