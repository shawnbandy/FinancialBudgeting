<div>
  <h1>Create Account</h1>
  <form class='form login-form' id='signUpForm'>
    <div class='form-group'>
      <label for='first-name'>First Name:</label>
      <input class='form-input' type='text' id='first-name' />
    </div>
    <div class='form-group'>
      <label for='last-name'>Last Name:</label>
      <input class='form-input' type='text' id='last-name' />
    </div>
    <div class='form-group'>
      <label for='password-login'>Password:</label>
      <input class='form-input' type='password' id='password-login' />
    </div>
    <div class='form-group'>
      <label for='password-confirm'>Confirm Password:</label>
      <input class='form-input' type='password' id='password-confirm' />
    </div>
    <!-- not sure how password confirm will work. -->
    <div class='form-group'>
      <button
        class='btn btn-primary bg-indigo-700 rounded-md p-1'
        type='submit'
        id='signup-button'
      >Sign Up</button>
    </div>
    <div>
      <p id='login-from-signup'>Already have an account?</p>
      <a href='/login'>Login</a>
    </div>
  </form>
</div>

<script src='js/signup.js'></script>