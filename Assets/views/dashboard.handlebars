<!-- Render sub layouts here! -->
<!--Main page-->
<section class='mt-9 m-6 min-h-screen'>
  <!--Establishes grid-->
  <section class='grid grid-cols-2 space-x-4'>
    <!--Start of budget-->
    <section class='text-center bg-white rounded-md py-3 px-2'>
      <h2 class="text-red-500 text-3xl font-semibold">Budget</h2>
      <div class="flex flex-row justify-between mx-3 text-xl font-medium pb-3">
        <h3>Category</h3>
        <h3>Amount</h3>
      </div>
      <div class="flex flex-col">
        {{#each budgetRev as |budget|}}
        {{> budget-dashboard}}
        {{/each}}
      </div>
      <div>
        <button class="btn btn-red bg-red-500 rounded-md px-2 py-1.5 text-white mt-2" id="budgetAdd" data-type="1">Add Category</button>
      </div>
    </section>
    <section class='space-y-4 text-center'>
      <!--Start of Expenses-->
      <section class='text-center bg-white rounded-md py-3 px-2'>
        <h2 class="text-red-500 text-3xl font-semibold">Expenses</h2>
        <div class="flex flex-row justify-between mx-3 text-xl font-medium pb-3">
          <h3>Purchase</h3>
          <h3>Amount</h3>
        </div>
        <div class="flex flex-col">
          {{#each expenseRev as |expense|}}
          {{> expense-dashboard}}
          {{/each}}
        </div>
        <button class="btn btn-red bg-red-500 rounded-md px-2 py-1.5 text-white mt-2" id="expenseAdd" dataType="2">Add Expense</button>
      </section>
      <!--Start of Income-->
      <section class='text-center bg-white rounded-md py-3 px-2'>
        <h2 class="text-red-500 text-3xl font-semibold">Income</h2>
        <div class="flex flex-row justify-between mx-3 text-xl font-medium pb-3">
          <h3>Source</h3>
          <h3>Amount</h3>
        </div>
        <div class="flex flex-col">
          {{#each incomeRev as |income|}}
          {{> income-dashboard}}
          {{/each}}
        </div>
        <button class="btn btn-red bg-red-500 rounded-md px-2 py-1.5 text-white mt-2" id="incomeAdd" dataType="3">Add Income</button>
      </section>
    </section>
  </section>
</section>

<script src="./js/add.js"></script>