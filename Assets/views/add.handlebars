<section class='mt-6 min-h-screen'>
  <!--Establishes grid-->
  <section>
    <!--Start of budget-->
    <section>
      <!--Start of budget-->
      {{#if budgetOption}}
      <a 
        href="/dashboard"
        class="bg-red-600 rounded-md text-white font-medium mx-4 my-2 py-1.5 px-2"
        aria-current='page'
      >Back</a>
      <section
        class='text-center bg-white rounded-md m-4 p-3'
      >
        <h1 class="text-red-600 text-3xl font-semibold">Budget. Household id is ?</h1>
        <form class='grid grid-cols-11 form space-x-2 mt-3' id='budgetForm'>
          <div class='col-span-5'>
            <h1 class="font-medium text-xl">Budget Category</h1>
            <input
              type='text'
              id='budgetName'
              class='form-control mb-5 w-full h-42px rounded-md p-2 name border-red-600'
              placeholder='E.g., Entertainment'
            />
            <!-- Password field -->
          </div>
          <div class='col-span-5'>
            <h1 class="font-medium text-xl">Amount</h1>
            <input
              type='text'
              id='budgetAmount'
              class='form-control mb-5 w-full h-42px rounded-md p-2 amount'
              placeholder='E.g., 400'
            />
          </div>
          <button
            class='btn bg-red-500 m-2 rounded-md text-white font-medium'
            type='submit'
            id='budgetBtn'
          >Submit</button>
        </form>
      </section>
    </section>
    {{else}}
      {{#if expenseOption}}
    <section>
      <!--Start of Expense-->
      <a 
        href="/dashboard"
        class="bg-red-600 rounded-md text-white font-medium mx-4 my-2 py-1.5 px-2"
        aria-current='page'
      >Back</a>
      <section
        class='text-center bg-white rounded-md m-4 p-3'
      >
        <h1 class="text-red-600 text-3xl font-semibold">Expenses</h1>
        <form class='grid grid-cols-12 form space-x-2 mt-3' id='expenseForm'>
          <div class='col-span-4'>
            <h1 class="font-medium text-xl">Name of Expense</h1>
            <input
              type='text'
              id='expenseName'
              class='form-control mb-5 w-full h-42px rounded-md p-2 name'
              placeholder='E.g., Groceries'
            />
            <!-- Password field -->
          </div>
          <div class='col-span-4'>
            <h1 class="font-medium text-xl">Amount</h1>
            <input
              type='text'
              id='expenseAmount'
              class='form-control mb-5 w-full h-42px rounded-md p-2 amount'
              placeholder='E.g., 100'
            />
          </div>
          <div class='col-span-4'>
            <h1 class="font-medium text-lg">Choose Budget Category</h1>
            <select class="m-1.5 p-1.5" name='budget' id='budgetID'>
              {{#each budgetArr as |budget|}}
                <option id={{budget.id}}>{{budget.name}}</option>
              {{/each}}
            </select>
          </div>
          <button
            class='btn bg-red-500 m-2 rounded-md text-white font-medium'
            type='submit'
            id='expenseBtn'
          >Submit</button>
        </form>
      </section>
    </section>
    {{else}}
    <!--Start of Income-->
    <section>
      <a 
        href="/dashboard"
        class="bg-red-600 rounded-md text-white font-medium mx-4 my-2 py-1.5 px-2"
        aria-current='page'
      >Back</a>
      <section
        class='text-center bg-white rounded-md m-4 p-3'
      >
        <h1 class="text-red-600 text-3xl font-semibold">Income</h1>
        <form class='grid grid-cols-11 form space-x-2 mt-3' id='incomeForm'>
          <div class='col-span-5'>
            <h1 class="font-medium text-xl">Source of Income</h1>
            <input
              type='text'
              id='incomeName'
              class='form-control mb-5 w-full h-42px rounded-md p-2 name'
              placeholder='E.g., Building fence for the Smiths'
            />
          </div>
          <div class='col-span-5'>
            <h1 class="font-medium text-xl">Amount</h1>
            <input
              type='text'
              id='incomeAmount'
              class='form-control mb-5 w-full h-42px rounded-md p-2 amount'
              placeholder='E.g., 1000'
            />
          </div>
          <button
            class='btn bg-red-500 m-2 rounded-md text-white font-medium'
            type='submit'
            id='incomeBtn'
          >Submit</button>
        </form>
      </section>
    </section>
  </section>
  {{/if}}
  {{/if}}
</section>
<script src='/js/addData.js'></script>
<script src="/js/logout.js"></script>